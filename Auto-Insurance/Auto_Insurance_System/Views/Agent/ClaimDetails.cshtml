@model Auto_Insurance_System.Models.Claim
@{
	ViewData["Title"] = "Agent â€¢ Claim Details";
}

<div class="container py-4">
	<div class="d-flex align-items-center justify-content-between mb-3">
		<h2 class="mb-0">Claim Details</h2>
		<a class="btn btn-outline-secondary" asp-action="ClaimsHub">Back</a>
	</div>

	@if (ViewBag.Error != null)
	{
		<div class="alert alert-warning">@ViewBag.Error</div>
	}

	<div class="card shadow-sm">
		<div class="card-body">
			<form method="post" class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Claim Id</label>
					<input class="form-control" name="claimId" type="number" required />
				</div>
				<div class="col-12 d-flex gap-2">
					<button class="btn btn-primary">Get Details</button>
					<a class="btn btn-outline-secondary" asp-action="ClaimsHub">Cancel</a>
				</div>
			</form>

			@if (Model != null)
			{
				<hr />
				<dl class="row">
					<dt class="col-sm-3">Policy Id</dt><dd class="col-sm-9">@Model.PolicyId</dd>
					<dt class="col-sm-3">Amount</dt><dd class="col-sm-9">@Model.ClaimAmount</dd>
					<dt class="col-sm-3">Date</dt><dd class="col-sm-9">@Model.ClaimDate.ToShortDateString()</dd>
					<dt class="col-sm-3">Status</dt><dd class="col-sm-9">@Model.ClaimStatus</dd>
					<dt class="col-sm-3">Adjuster</dt><dd class="col-sm-9">@Model.AdjusterId</dd>
				</dl>
			}
		</div>
	</div>
</div> 