<script>
    // Minimal JS to enhance FAQ toggles
    document.querySelectorAll('[data-faq]').forEach(function(btn){
        btn.addEventListener('click', function(){
            const panel = this.parentElement.querySelector('[data-faq-panel]');
            document.querySelectorAll('[data-faq-panel]').forEach(p => { if (p !== panel) p.classList.remove('show'); });
            panel.classList.toggle('show');
        });
    });
</script> 