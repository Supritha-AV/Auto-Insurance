@{
    ViewData["Title"] = "Customer Dashboard";
    var username = Context.Session.GetString("UserName");
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="display-5 fw-semibold text-dark">Welcome, @username!</h1>
        <p class="text-muted">This is your Customer Dashboard.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4 col-lg-3">
            <a class="text-decoration-none" asp-controller="Customer" asp-action="PoliciesHub">
                <div class="tile card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-start">
                        <div class="icon-circle bg-success text-white mb-3">📄</div>
                        <div class="fs-5 fw-bold">Policies</div>
                        <div class="text-muted small">Create policy</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-lg-3">
            <a class="text-decoration-none" asp-controller="Customer" asp-action="ClaimsHub">
                <div class="tile card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-start">
                        <div class="icon-circle bg-warning text-dark mb-3">🧾</div>
                        <div class="fs-5 fw-bold">Claims</div>
                        <div class="text-muted small">Submit / view</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-lg-3">
            <a class="text-decoration-none" asp-controller="Customer" asp-action="PaymentsHub">
                <div class="tile card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-start">
                        <div class="icon-circle bg-info text-white mb-3">💳</div>
                        <div class="fs-5 fw-bold">Payments</div>
                        <div class="text-muted small">Make / view</div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 col-lg-3">
            <a class="text-decoration-none" asp-controller="Customer" asp-action="TicketsHub">
                <div class="tile card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-start">
                        <div class="icon-circle bg-primary text-white mb-3">🎫</div>
                        <div class="fs-5 fw-bold">Tickets</div>
                        <div class="text-muted small">Create / view status</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
.icon-circle{ width:46px;height:46px;border-radius:50%;display:inline-flex;align-items:center;justify-content:center; }
.tile{ transition:transform .15s ease, box-shadow .15s ease; }
.tile:hover{ transform:translateY(-2px); box-shadow:0 .75rem 1rem rgba(0,0,0,.08)!important; }
</style>
