 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Auto Insurance System") - Auto_Insurance_System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-9Gz6TgM8LzJY0w7L9a4m0mQh1m7mUQ4pE2Fz9qj6cQq7k6OQF3yXl5C4jD9v9V8e" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Auto_Insurance_System.styles.css" asp-append-version="true" />
</head>
<body class="@((ViewBag.BodyClass as string) ?? "")">
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-app-primary">
            <div class="container-fluid">
                @{
                    var role = Context.Session.GetString("UserRole");
                    var userName = Context.Session.GetString("UserName");
                    var brandTitle = "Auto Insurance System";
                    if (!string.IsNullOrEmpty(role))
                    {
                        brandTitle = role switch
                        {
                            "ADMIN" => "Admin Dashboard · Auto Insurance System",
                            "AGENT" => "Agent Dashboard · Auto Insurance System",
                            "CUSTOMER" => "Customer Dashboard · Auto Insurance System",
                            _ => "Auto Insurance System"
                        };
                    }
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                    var isFullWidth = (ViewBag.FullWidth as bool?) ?? false;
                    var noTopPadding = (ViewBag.NoTopPadding as bool?) ?? false;
                }

                <a class="navbar-brand fw-semibold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Landing">
                    <span class="badge rounded-circle bg-light text-app-primary me-2">AI</span>
                    <span>@brandTitle</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Landing">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="icon-circle bg-light text-dark me-2">👤</span>
                                    <span class="text-capitalize">@role.ToLower()</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-item-text"><small class="text-muted">Signed in as</small><div class="fw-semibold">@userName</div></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @* @if (Context.Session.GetString("UserRole") == "ADMIN")
        {
            <div class="bg-light-subtle border-bottom">
                <div class="container py-2">
                    <ul class="nav gap-3 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="UsersHub">
                                <i class="bi bi-people me-1"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="ClaimsHub">
                                <i class="bi bi-clipboard-check me-1"></i> Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="PoliciesHub">
                                <i class="bi bi-file-earmark-text me-1"></i> Policies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="PaymentsHub">
                                <i class="bi bi-credit-card me-1"></i> Payments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="TicketsHub">
                                <i class="bi bi-life-preserver me-1"></i> Tickets
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        } *@
    </header>

    <div class="@(isFullWidth ? "container-fluid px-0" : "container") @(noTopPadding ? "py-0" : "py-4")">
        <main id="mainContent" role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white-50 footer-compact">
        <div class="container-sm d-flex justify-content-between align-items-center py-2">
            <span>&copy; @DateTime.UtcNow.Year - Auto Insurance System</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
