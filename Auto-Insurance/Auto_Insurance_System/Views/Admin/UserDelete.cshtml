@{
	ViewData["Title"] = "Delete User";
}

<div class="container py-4">
	<div class="d-flex align-items-center justify-content-between mb-3">
		<h2 class="mb-0">Delete User</h2>
		<a class="btn btn-outline-secondary" asp-action="UsersHub">Back</a>
	</div>

	@if (TempData["Success"] != null)
	{
		<div class="alert alert-success">@TempData["Success"]</div>
	}
	@if (ViewBag.Error != null)
	{
		<div class="alert alert-warning">@ViewBag.Error</div>
	}

	<div class="card shadow-sm">
		<div class="card-body">
			<form method="post" class="row g-3">
				<div class="col-md-4">
					<label class="form-label">User Id</label>
					<input class="form-control" name="userId" type="number" required />
				</div>
				<div class="col-12 d-flex gap-2">
					<button class="btn btn-danger">Delete</button>
					<a class="btn btn-outline-secondary" asp-action="UsersHub">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div> 