@{
	ViewData["Title"] = "Tickets Hub";
}

<div class="container py-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2 class="mb-0">Tickets</h2>
		<a class="btn btn-outline-secondary" asp-controller="Auth" asp-action="AdminDashboard">Dashboard</a>
	</div>

	<div class="row g-4 mt-1">
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="TicketsAll">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-primary text-white mb-3"><i class="bi bi-list-check"></i></div>
						<div class="fs-5 fw-bold">All Tickets</div>
						<div class="text-muted small">Browse all</div>
					</div>
				</div>
			</a>
		</div>
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="TicketAssign">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-warning text-dark mb-3"><i class="bi bi-person-check"></i></div>
						<div class="fs-5 fw-bold">Assign Ticket</div>
						<div class="text-muted small">Set agent</div>
					</div>
				</div>
			</a>
		</div>
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="TicketResolve">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-success text-white mb-3"><i class="bi bi-check2-circle"></i></div>
						<div class="fs-5 fw-bold">Resolve Ticket</div>
						<div class="text-muted small">Mark as resolved</div>
					</div>
				</div>
			</a>
		</div>
	</div>
</div>

<style>
.icon-circle{ width:46px;height:46px;border-radius:50%;display:inline-flex;align-items:center;justify-content:center; }
.tile{ transition:transform .15s ease, box-shadow .15s ease; }
.tile:hover{ transform:translateY(-2px); box-shadow:0 .75rem 1rem rgba(0,0,0,.08)!important; }
</style> 