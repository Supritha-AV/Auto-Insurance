@{
	ViewData["Title"] = "Resolve Ticket";
}

<div class="container py-4">
	<div class="d-flex align-items-center justify-content-between mb-3">
		<h2 class="mb-0">Resolve Ticket</h2>
		<a class="btn btn-outline-secondary" asp-action="TicketsHub">Back</a>
	</div>

	<div class="card shadow-sm">
		<div class="card-body">
			<form method="post" class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Ticket Id</label>
					<input class="form-control" type="number" name="ticketId" required />
				</div>
				<div class="col-12 d-flex gap-2">
					<button class="btn btn-primary">Resolve</button>
					<a class="btn btn-outline-secondary" asp-action="TicketsHub">Cancel</a>
				</div>
			</form>
			@if (ViewBag.Success != null)
			{
				<div class="alert alert-success mt-3">@ViewBag.Success</div>
			}
			@if (ViewBag.Error != null)
			{
				<div class="alert alert-warning mt-3">@ViewBag.Error</div>
			}
		</div>
	</div>
</div> 