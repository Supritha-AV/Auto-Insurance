@model Auto_Insurance_System.Models.Policy
@{
	ViewData["Title"] = "Create Policy";
}

<div class="container py-4 policies-bg">
	<div class="d-flex align-items-center justify-content-between mb-3">
		<h2 class="mb-0">Create Policy</h2>
		<a class="btn btn-outline-secondary" asp-action="PoliciesHub">Back</a>
	</div>

	@if (TempData["Success"] != null)
	{
		<div class="alert alert-success">@TempData["Success"]</div>
	}
	@if (ViewBag.Error != null)
	{
		<div class="alert alert-warning">@ViewBag.Error</div>
	}

	<div class="card shadow-sm">
		<div class="card-body">
			<form method="post" class="row g-3">
				<div class="col-12">
					<label class="form-label">Policy Number</label>
					<input class="form-control" asp-for="PolicyNumber" required />
					<span class="text-danger" asp-validation-for="PolicyNumber"></span>
				</div>
				<div class="col-12">
					<label class="form-label">Vehicle Details</label>
					<input class="form-control" asp-for="VehicleDetails" required />
					<span class="text-danger" asp-validation-for="VehicleDetails"></span>
				</div>
				<div class="col-12">
					<label class="form-label">Coverage Amount</label>
					<input class="form-control" type="number" step="0.01" asp-for="CoverageAmount" required />
					<span class="text-danger" asp-validation-for="CoverageAmount"></span>
				</div>
				<div class="col-12">
					<label class="form-label">Coverage Type</label>
					<input class="form-control" asp-for="CoverageType" required />
					<span class="text-danger" asp-validation-for="CoverageType"></span>
				</div>
				<div class="col-12">
					<label class="form-label">Premium Amount</label>
					<input class="form-control" type="number" step="0.01" asp-for="PremiumAmount" required />
					<span class="text-danger" asp-validation-for="PremiumAmount"></span>
				</div>
				<div class="col-md-6">
					<label class="form-label">Start Date</label>
					<input class="form-control" type="date" asp-for="StartDate" required />
					<span class="text-danger" asp-validation-for="StartDate"></span>
				</div>
				<div class="col-md-6">
					<label class="form-label">End Date</label>
					<input class="form-control" type="date" asp-for="EndDate" required />
					<span class="text-danger" asp-validation-for="EndDate"></span>
				</div>
				<div class="col-12">
					<label class="form-label">Status</label>
					<select class="form-select" asp-for="PolicyStatus">
						<option>ACTIVE</option>
						<option>INACTIVE</option>
						<option>RENEWED</option>
					</select>
					<span class="text-danger" asp-validation-for="PolicyStatus"></span>
				</div>
				<div class="col-12 d-flex gap-2">
					<button class="btn btn-primary">Create</button>
					<a class="btn btn-outline-secondary" asp-action="PoliciesHub">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}

<style>
.policies-bg{background:#ffffff;} 
</style> 