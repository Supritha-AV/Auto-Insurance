@{
	ViewData["Title"] = "Policies Hub";
}

<div class="container py-4 claimslike-bg">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2 class="mb-0">Policies</h2>
		<a class="btn btn-outline-secondary" asp-controller="Auth" asp-action="AdminDashboard">Dashboard</a>
	</div>

	<div class="row g-4 mt-1">
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="PoliciesAll">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-primary text-white mb-3"><i class="bi bi-list-check"></i></div>
						<div class="fs-5 fw-bold">Get All Policies</div>
						<div class="text-muted small">Browse the full list</div>
					</div>
				</div>
			</a>
		</div>
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="PolicyDetails">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-warning text-dark mb-3"><i class="bi bi-search"></i></div>
						<div class="fs-5 fw-bold">Get Policy By ID</div>
						<div class="text-muted small">Find a specific policy</div>
					</div>
				</div>
			</a>
		</div>
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="PolicyUpdate">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-info text-white mb-3"><i class="bi bi-pencil-square"></i></div>
						<div class="fs-5 fw-bold">Update Policy</div>
						<div class="text-muted small">Modify an existing policy</div>
					</div>
				</div>
			</a>
		</div>
		<div class="col-md-3">
			<a class="text-decoration-none" asp-action="PolicyDelete">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-danger text-white mb-3"><i class="bi bi-trash"></i></div>
						<div class="fs-5 fw-bold">Delete Policy</div>
						<div class="text-muted small">Remove by id</div>
					</div>
				</div>
			</a>
		</div>
		@* <div class="col-md-3">
			<a class="text-decoration-none" asp-action="PolicyCreate">
				<div class="tile card shadow-sm border-0 h-100">
					<div class="card-body d-flex flex-column justify-content-center align-items-start">
						<div class="icon-circle bg-success text-white mb-3"><i class="bi bi-plus-circle"></i></div>
						<div class="fs-5 fw-bold">Create Policy</div>
						<div class="text-muted small">Add a new policy</div>
					</div>
				</div>
			</a>
		</div> *@
	</div>
</div>

<style>
.claimslike-bg{background:#ffffff;} 
.icon-circle{ width:46px;height:46px;border-radius:50%;display:inline-flex;align-items:center;justify-content:center; }
.tile{ transition:transform .15s ease, box-shadow .15s ease; }
.tile:hover{ transform:translateY(-2px); box-shadow:0 .75rem 1rem rgba(0,0,0,.08)!important; }
</style> 